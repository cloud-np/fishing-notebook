---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { settings } from "src/settings.const";

interface Props {
	className?: string;
}

const { className = "" } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class={`flex items-start justify-center mb-12 md:flex-col gap-4 ${className}`}>
	<span class="text-sm">
		{t("settings.business.contact.address.street")}
		<br />
		â€” {settings.business.contact.address.postalCode}
		{t("settings.business.contact.address.city")}
	</span>
	<div class="flex flex-col items-start justify-center">
		<span class="tel f-mono clickable font-bold">
			<a href={`tel:${settings.business.contact.phone}`}>
				{settings.business.contact.phone.replace("+30 ", "")}
			</a>
		</span>
		<span class="email f-sans clickable underline-hover-effect text-sm">
			<a href={`mailto:${settings.business.contact.email}`}>
				{settings.business.contact.email}
			</a>
		</span>
	</div>
</div>
