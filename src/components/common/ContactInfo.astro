---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { settings } from "src/settings.const";

interface Props {
	className?: string;
}

const { className = "" } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<div class={`flex items-start justify-center mb-12 md:flex-col gap-4 ${className}`}>
	<div class="flex flex-col items-start justify-center">
		<span class="email f-sans clickable underline-hover-effect text-sm">
			<a href={`mailto:${settings.business.contact.email}`}>
				{settings.business.contact.email}
			</a>
		</span>
	</div>
</div>
