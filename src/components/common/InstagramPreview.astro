---
import ip1 from "@assets/instagram-preview/ip1.webp";
import ip2 from "@assets/instagram-preview/ip2.webp";
import ip3 from "@assets/instagram-preview/ip3.webp";
import ip4 from "@assets/instagram-preview/ip4.webp";
import ip5 from "@assets/instagram-preview/ip5.webp";
import ip6 from "@assets/instagram-preview/ip6.webp";
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";

const images = [
	{ src: ip1, alt: "Πολυτελές μπάνιο με μινιμαλιστικό φωτισμό" },
	{ src: ip2, alt: "Μεγάλο μπάνιο με γήινα χρώματα" },
	{ src: ip3, alt: "Ζεστό υπνοδωμάτιο με ντουλάπα" },
	{ src: ip4, alt: "Κρυφή κάβα σε δίφυλλη ντουλάπα" },
	{ src: ip5, alt: "Μινιμαλιστικό μπάνιο σε σκούρα χρώματα" },
	{ src: ip6, alt: "Υπνοδωμάτιο με πολυτελές κρύσταλλο" },
];
---

<div class="grid w-full overflow-hidden md:flex z-[1]">
	<div class="absolute left-1/2 z-10 -translate-x-1/2 place-self-center">
		<a
			aria-label="Instagram button"
			class="block rounded-full bg-white p-6"
			href="https://www.instagram.com/homeupgradesgr/"
			target="_blank"
			rel="noopener noreferrer">
			<Icon name="instagram" class="h-6 w-6 text-gray-500" />
		</a>
	</div>

	<div class="flex md:w-1/2">
		{
			images
				.slice(0, 3)
				.map(image => (
					<Image
						class="w-1/3 transition-opacity duration-300 ease-in-out hover:opacity-80"
						src={image.src}
						alt={image.alt}
					/>
				))
		}
	</div>

	<div class="flex md:w-1/2">
		{
			images
				.slice(3, 6)
				.map(image => (
					<Image
						class="w-1/3 transition-opacity duration-300 ease-in-out hover:opacity-80"
						src={image.src}
						alt={image.alt}
					/>
				))
		}
	</div>
</div>
