---
import type { Post } from '../../libs/post';
import BlogPostPreview from './BlogPostPreview.astro';

export interface Props {
	class?: string;
	posts: Post[];
}

const { posts } = Astro.props;
---

<ul>
	{
		posts.map((post) => (
			<li>
				<BlogPostPreview post={post} />
			</li>
		))
	}
</ul>

<style>
	ul {
		margin: 0 0 10vh 0;
		list-style: none;
		padding: 0;
		display: flex;
		justify-content: center;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
	}

	li {
		max-width: 60rem;
		width: 100%;
	}
</style>
