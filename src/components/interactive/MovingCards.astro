---
interface Props {
    duration: number;
}
const { duration } = Astro.props;
---

<div class="wrapper">
    <div class="inner max-w-7xl">
        <div
            class="scroller-container flex min-w-full w-full flex-nowrap h-80 rounded-xl z-40"
            style={{ "--duration": `${duration}ms` }}
        >
            <slot />
        </div>
    </div>
</div>

