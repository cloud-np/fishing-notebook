---
import { settings } from "src/settings.const";
import SocialList from "@components/common/SocialList.astro";
import Logo from "@components/common/Logo.astro";
import ContactInfo from "@components/common/ContactInfo.astro";
---

<footer class="mt-auto flex min-h-50 flex-col justify-center px-8 pt-16 md:justify-between">
	<div class="flex flex-col items-center justify-between gap-4 md:flex-row md:items-start">
		<div class="mb-4 flex flex-col items-center text-base">
			<Logo width={150} />
			<p>&copy; {new Date().getFullYear()} {settings.name}</p>
			<div class="-ml-3 pt-1">
				<SocialList />
			</div>
		</div>
		<div class="flex flex-col items-start">
			<ContactInfo />
		</div>
	</div>
</footer>

<style>
	footer {
		background-color: var(--c-bg_dark);
		color: var(--c-text_light);
	}
</style>
