# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# Astro files
[*.astro]
indent_style = tab
indent_size = 4

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx,mjs}]
indent_style = tab
indent_size = 4

# JSON files
[*.json]
indent_style = tab
indent_size = 4

# CSS/SCSS files
[*.{css,scss}]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = tab
indent_size = 4

# Package files (keep spaces for compatibility)
[package.json]
indent_style = space
indent_size = 2

[package-lock.json]
indent_style = space
indent_size = 2

[pnpm-lock.yaml]
indent_style = space
indent_size = 2 